#! /usr/bin/env bash

if [ $# -ne 2 ]; then
    echo "Usage: $0 <file_path> <commit_message>"
    exit 1
fi

file_path=$1
commit_message=$2

if [ ! -f "$file_path" ]; then
    echo "Error: File does not exist"
    exit 1
fi

git add $file_path
git commit -m "$commit_message"

echo "Changes committed successfully"